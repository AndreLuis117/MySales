@model TesteFabrica.MVC.ViewModels.ItensPedidoViewModel

@{
    ViewBag.Title = "Inclusão de itens no pedido";
}
    <body>
        <div class="card">
            <div class="card-body">
                <h2 align="left" class="card-title">Produtos</h2>


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Qtde, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Qtde, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Qtde, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">

                        Escolha o produto:
                        @Html.DropDownList("ProdutoId", String.Empty)

                    </div>
                </div>
                <br />
                <div class="form-actions no-color">
                        <button type="submit" value="Adicionar" class="btn btn-success">
                            Adicionar ao pedido
                        </button> 
                </div>
                <br />
            </div>
                }

                <div>
                    @Html.ActionLink("Voltar para pedidos", "Create", "Pedido", new { area = "" })
                </div>
            </div>
        </div>
    </body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
