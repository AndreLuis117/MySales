@model IEnumerable<TesteFabrica.MVC.ViewModels.PedidoViewModel>

@{
    ViewBag.Title = "Index";
}

    <body background="~/Content/Images/restaurant_icons.png">

        <h2>Lista de pedidos</h2>


        <p>
            @Html.ActionLink("Novo pedido", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DataPedido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorTotal)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataPedido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorTotal)
                    </td>
                    <td>
                        @Html.ActionLink("Detalhes", "Details", new { id = item.PedidoId }) |
                    </td>
                </tr>
            }

        </table>

    </body>